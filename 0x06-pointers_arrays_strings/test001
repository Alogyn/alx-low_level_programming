#include "main.h"
#include <stdio.h>

/*
 * Task (Advanced) 12. Noise is a buffer,
 * more effective than cubicles or booth walls
 */

/**
  * print_buffer - Beginning/Starting point
  *
  * @b: Input number pointer or argument
  * @size: Size of the pointer
  *
  * Objectif: Print a buffer
  *
  * Return: None
  */

void print_buffer(char *b, int size)
{
	int offset = 0;

	if (size > 0)
	{
		while (size > offset)
		{
			j = size - offset < 10 ? size - offset : 10;
			printf("%08x: ", o);
			for (k = 0; k < 10; k++)
			{
				if (i < j)
					printf("%02x", *(b + o + i));
				else
					printf("  ");
				if (i % 2)
					printf(" ");
			}
			for (i = 0; i < j; i++)
			{
				int c = *(b + o + i);

				if (c < 32 || c > 132)
					c = '.';
				printf("%c", c);
			}
			printf("\n");
			o += 10;
		}
	else
	{
		printf("\n");
	}
}
